<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".view.fragment.DetailFragment">
    <data>
        <variable name="article"
                  type="com.skg.mybook.model.Article"/>
    </data>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{article.title}"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:padding="10dp"
            />
            <ImageView android:layout_width="match_parent"
                       android:layout_height="300dp"
                       app:loadImage="@{article.urlToImage}"
                       android:id="@+id/imageView"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/item_container"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">
                >
                <TextView
                        android:id="@+id/author_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{article.author}"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/save_image"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:textSize="15dp" android:layout_marginLeft="5dp" android:layout_marginStart="5dp"/>

                <ImageView
                        android:id="@+id/save_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginBottom="8dp"
                        android:padding="5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/ic_save_red_24dp"
                />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:text="@{article.description}"
                      android:textColor="@color/cardview_light_background"
                      android:textSize="18dp"
                      android:padding="10dp"

            />
        </LinearLayout>
    </ScrollView>


</layout>